<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0DD17866"
    tools:context=".schedule.DetailScheduleActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@drawable/judul"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotoregular"
            android:text="Detail Aktivitas"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/imgView"
            app:layout_constraintLeft_toLeftOf="@id/imgView"
            app:layout_constraintRight_toRightOf="@id/imgView"
            app:layout_constraintTop_toTopOf="@id/imgView" />

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/arrow"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/imgView"
            app:layout_constraintTop_toTopOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.285" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            app:cardCornerRadius="10dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/img_detail_schedule"
                    android:layout_margin="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    />

                <TextView
                    android:id="@+id/tv1schedule"
                    android:textSize="20sp"
                    android:fontFamily="@font/robotoregular"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:text="Tanggal"
                    app:layout_constraintStart_toStartOf="@id/img_detail_schedule"
                    app:layout_constraintTop_toBottomOf="@id/img_detail_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_schedule_name"
                    android:textSize="18sp"
                    android:fontFamily="@font/robotoregular"
                    android:text="Senin, 14 Juli 2025 08.00 Wib"
                    app:layout_constraintStart_toStartOf="@id/tv1schedule"
                    app:layout_constraintTop_toBottomOf="@id/tv1schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv2schedule"
                    android:textSize="20sp"
                    android:fontFamily="@font/robotoregular"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:text="Lokasi"
                    app:layout_constraintStart_toStartOf="@id/tv_schedule_name"
                    app:layout_constraintTop_toBottomOf="@id/tv_schedule_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_location_schedule"
                    android:textSize="18sp"
                    android:fontFamily="@font/robotoregular"
                    android:text="Sleman, Yogyakarta"
                    app:layout_constraintStart_toStartOf="@id/tv2schedule"
                    app:layout_constraintTop_toBottomOf="@id/tv2schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv3schedule"
                    android:textSize="20sp"
                    android:fontFamily="@font/robotoregular"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:text="Deskripsi"
                    app:layout_constraintStart_toStartOf="@id/tv_location_schedule"
                    app:layout_constraintTop_toBottomOf="@id/tv_location_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_deskripsi_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotoregular"
                    android:paddingHorizontal="16dp"
                    android:paddingBottom="5dp"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv3schedule"
                    app:layout_constraintVertical_bias="0.0"
                    tools:layout_editor_absoluteX="0dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>